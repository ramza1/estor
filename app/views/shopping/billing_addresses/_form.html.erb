<%= f.error_notification %>
<div class="row">
    <div class="col-md-6">
      <%= f.input :first_name, :required => true, label: false, placeholder: "First Name" %>
    </div>
    <div class="col-md-6">
      <%= f.input :last_name, :required => true, label: false, placeholder: "Last Name" %>
    </div>
</div>
<%= f.input :address1, :required => true, label: false, placeholder: "Address1", input_html: {class: "span12"} %>
<%= f.input :address2, :required => true, label: false, placeholder: "Address2", input_html: {class: "span12"}  %>

<div class="row">
  <%= f.fields_for :phones do |phone_f| %>
  <div class="span12">
    <div class="col-md-6">
      <%= phone_f.text_field :display_number, placeholder: "Primary Phone" %>
    </div>
    <div class="col-md-6">
      <%= phone_f.select :phone_type_id, phone_types, prompt: "Type" %>
    </div>
  </div>
  <% end %>
</div>

<div class="row">
   <div class="span12">
     <div class="col-md-6">
       <%= f.input :city, :required => true, label: false, placeholder: "City" %>
     </div>
     <div class="col-md-6">
       <%= f.input :zip_code, :required => true, label: false, placeholder: "Zip Code" %>
     </div>
   </div>
</div>


<div class="row-fluid">
  <div class="span12">
    <div class="row-fluid">
      <div class="span6">
        <% if Settings.require_state_in_address %>
        <%= f.label    :state_id, "State/Province" %>
        <%= f.select   :state_id, @states,
                       {prompt: "SELECT STATE", :include_blank => false}, class: "span12" %>
        <% elsif countries.size == 1 %>
            <%= f.label :country_id, "Country" %>
            <%= countries.first.name %>
            <%= f.hidden_field   :country_id %>
        <% else %>
            <%= f.label    :country_id, "Country" %>
            <%= f.select   :country_id, select_countries,
                           {prompt: "SELECT COUNTRY", :include_blank => false}, class: "span12" %>
        <% end %>
      </div>
      <div class="span6"></div>
    </div>
  </div>
</div>

<div class="">
  <div class="pull-left">
    <%= f.check_box :billing_default, id: "categorymanufacturer1"%><label for="categorymanufacturer1">Make this my default Billing Address</label></div>
  </div>

<div class="center">
      <%= f.button :submit, "Save & Continue", class: "btn btn-success" %>
</div>

