<%= content_for :product do %>
    <ul class="breadcrumb">
      <li>
        <%= link_to "Home", root_url %>
        <span class="divider">/</span>
      </li>
      <li>
        <%= link_to "Products", products_path %>
        <span class="divider">/</span>
      </li>
      <li class="active">CheckOut</li>
    </ul>
    <h1 class="headingmain"><span><%= session_cart.shopping_cart_items.size %> Shopping Cart Item(s)</span></h1>
    <%= form_for session_cart, :url => shopping_cart_item_path(session_cart), :as => :cart do |cart_form| %>
    <div class="cart-info">
      <table class="table table-striped table-bordered">
        <tr>
          <th class="image">Image</th>
          <th class="name">Product Name</th>
          <th class="quantity">Quantity</th>
          <th class="price">Unit Price</th>
          <th class="total">Total</th>
          <th></th>
        </tr>
        <% @cart_items.each_with_index do |item, i| %>
            <%= cart_form.fields_for :shopping_cart_items, item do |cart_items_form| %>
                <%= render :partial => 'cart_item', :locals => {:cart_items_form => cart_items_form, :item => item, :i => i }%>
            <% end %>
        <% end %>

      </table>
    </div>
    <div class="row">
      <div class="span4">
        <%= cart_form.submit 'update cart', class: "btn btn-info" %>  <span>Make changes above and update cart.</span>
      </div>
      <div class="pull-right">
        <div class="span4 pull-right">
          <table class="table table-striped table-bordered ">
            <tr>
              <td><span class="extra bold">Sub-Total :</span></td>
              <td><span class="bold"><%= number_to_currency session_cart.sub_total, unit: "â‚¦", precision: 0 %></span></td>
            </tr>
          </table>
          <%= cart_form.submit 'checkout', {:checkout => 1, class: "btn btn-success pull-right"} %>
          <%= link_to "Continue Shopping", products_url, class: "btn btn-success pull-right mr10" %>
        </div>
      </div>
    </div>

    <%= render "saved_items" unless @saved_cart_items.empty? %>
<% end %>
<% end %>