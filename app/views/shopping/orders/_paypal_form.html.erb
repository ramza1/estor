<%= form_tag( shopping_order_path(@order),
              method: :put,
              class: 'login_form',
              id:    'purchase_order') do  %>

    <div class="row">
      <div class="col-md-6">
        <%= text_field_tag(:first_name, @credit_card.first_name, placeholder: "First Name") %>
      </div>
      <div class="col-md-6">
        <%= text_field_tag(:last_name, @credit_card.last_name, placeholder: "Last Name") %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-9">
        <%= text_field_tag(:number, @credit_card.number ,:class => ' disableAutoComplete', :autocomplete => "off", placeholder: "Card Number") %>
      </div>
      <div class="col-md-3">
        <%= text_field_tag(:verification_value, @credit_card.verification_value ,:class => 'disableAutoComplete', :autocomplete => "off", placeholder: "VCC") %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= label_tag :type, 'Type'%>
        <%= select_tag(:type, options_for_select(['visa', 'mastercard'])) %>
      </div>
      <div class="col-md-4">
        <%= label_tag :month %>
        <%= select_tag(:month, options_for_select(['01', '02',  '03', '04', '05', '06', '07', '08', '09', '10', '11', '12' ])) %>
      </div>
      <div class="col-md-4">
        <%= label_tag :year %>
        <%= select_tag(:year, options_for_select((Time.zone.now.year..(Time.zone.now.year + 10)))) %>
      </div>
    </div>
    <%= submit_tag 'Complete Order', :class => 'button success', style: "margin-bottom: 10px;" %>
    <br/>
<% end %>