<section class="shop">
  <div class="container" style="padding-top: 134px;">
    <div class="row">
      <%= render "account_sidebar" %>
      <div class="col-lg-9 col-sm-9 padbot20">
        <div class="sorting_options clearfix">

          <!-- COUNT TOVAR ITEMS -->
          <div class="count_tovar_items">
            <p>Profile Overview</p>
          </div><!-- //COUNT TOVAR ITEMS -->

        </div>

        <div class="row-fluid shop_block">
          <div class='col-md-6 col-sm-12'>
            <h4> <%= current_customer.display_name %> Profile </h4>

            <ul id='profile_details' >
              <li>
                <label>Email:</label>
                <%= current_customer.email %>
              </li>

              <li>
                <%= link_to "Edit", edit_myaccount_overview_path() %>
              </li>
            </ul>
          </div>

          <div class='col-md-5 col-sm-12'>
            <div>
              <h4> Address </h4>
              <% if current_customer.shipping_address %>
                  <%= render :partial => 'compact_address', :locals => { :shopping_address => current_customer.shipping_address } %>
                  <%= link_to "Edit", edit_myaccount_address_path(current_customer.shipping_address) %>
              <% else %>
                  No Address Saved.<br/>
                  <%= link_to "New", new_myaccount_address_path() %>
              <% end %>
            </div>
            <div>
              <h4> Store Credits </h4>
              <%= raw number_to_currency current_customer.store_credit.amount, unit: "&#8358;".html_safe, precision: 0 %>
            </div>
          </div>

        </div>


      </div>
    </div>

  </div>

</section>

<style>
    .menu_block{
        border-bottom: 1px solid #eee;
    }
</style>