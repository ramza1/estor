<div class="row">
  <div class="span4">
    <span id="store-brand-name">Shop Logo/Name</span>
  </div>
  <div class="span8">
    <div class="row">
      <div class="pull-right logintext">
        <% if current_customer %>
       Welcome &nbsp;  <%= link_to current_customer.display_name, myaccount_root_url %> &nbsp; | &nbsp; <%= link_to "sign out", destroy_customer_session_path, method: :delete %>
        <% else %>
        Welcome! you can <%= link_to "login", new_customer_session_path %>
        or <%= link_to "create an account", new_customer_registration_path %>
        <% end %>
      </div>
    </div>
    <%= form_tag search_path, method: :get, class: "form-search marginnull topsearch pull-right" do %>
      <%= text_field_tag :q, @q, :placeholder => "Search here...", id: "search", :class => "input-large search-query search-icon-top" %>
    <% end %>
  </div>
</div>