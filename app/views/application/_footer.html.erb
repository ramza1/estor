<footer id="footer">
  <section class="footerlinks">
    <div class="container">
      <div class="shipingstrip">
        <div class="fl">
          <div class="control-group">
            <%= form_for MailingList.new, remote: true, html: {class: "form-horizontal"} do |f| %>
              <div class="">
                <div class="input-prepend">
                  <span class="add-on"><i class="icon-envelope icon-w"></i></span>
                  <%= f.text_field :email, placeholder: "Subscribe to Newsletter" %>
                  <button type="submit" class="btn btn-success" value="Subscribe">Subscribe</button>
                </div>
              </div>

                <div class="special_email_field">
                  <%= label_tag :email %>
                  <%= text_field_tag :email, "", :autocomplete => "off" %>
                  (do not fill)
                </div>
            <% end %>
          </div>
        </div>
        <div class="fr">
            <img src="/assets/interswitch.jpg">
            <img src="/assets/mastercard_1.png">
            <img src="/assets/visa_1.png">
            <img src="/assets/verve.jpg">
            <img src="/assets/cashOnDelivery_1.png">
        </div>
      </div>
    </div>
    <div class="container">
      <div class="info">
        <ul>
          <li><a href="/privacy_policy">Privacy Policy</a>
          </li>
          <li><a href="/terms_and_conditions">Terms &amp; Conditions</a>
          </li>
          <li><a href="/blog">Blog</a>
          </li>
          <li><%= link_to "Create your store", root_url(subdomain: false) %></li>
        </ul>
      </div>
      <div id="footersocial">
        <a href="#" title="Facebook" class="facebook">Facebook</a>
        <a href="http://twitter.com/#" target="_blank" title="Twitter" class="twitter">Twitter</a>
        <a href="#" title="Linkedin" class="linkedin" target="_blank" >Linkedin</a>
        <a href="#" title="rss" class="rss">rss</a>
        <a href="#" title="Googleplus" class="googleplus" target="_blank" >Googleplus</a>
        <a href="#" title="Skype" class="skype" target="_blank" >Skype</a>
        <a href="#" title="Flickr" class="flickr" target="_blank" >Flickr</a>
      </div>
    </div>
  </section>
  <section class="copyrightbottom">
    <div class="container">
      <div class="row">
        <div class="span6"> Contact us at  or call us at </div>
        <div class="span6 textright"> ShopName @ <%= Time.zone.now.year %> pampered by <%= link_to "Myshopnany", root_url, class: "link_to_root" %></div>
      </div>
    </div>
  </section>
  <a id="gotop" href="#">Back to top</a>
</footer>