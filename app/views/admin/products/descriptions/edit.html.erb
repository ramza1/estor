<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to @product.name, admin_product_path(@product) %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Edit product Description below</h4>
      </div>
      <div class="body">
        <%= simple_form_for @product, :url  => admin_products_description_path(@product), html: {class: 'form-horizontal' } do |f| %>

            <% if @product.errors.any? %>
                <div class="alert alert-error" style="margin-top: 10px;">
                  <h4><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>

                  <ul>
                    <% @product.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>

            <fieldset style="margin-top:20px">
              <%= f.input :name, input_html: {class: "input-xlarge"} %>
              <%= f.input :description_markup, :as => :ckeditor, input_html: {class: "input-xlarge", :ckeditor => {:uiColor => "#AADC6E", :toolbar => "mini", disableNativeSpellChecker: false}} %>

            </fieldset>




            <div class="form-actions">
              <%= f.submit class: "btn btn-primary" %>  or <%= link_to "Cancel", :back %>
            </div>
        <% end %>








      </div>
    </div>
  </div>
</div>

