<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to_unless_current "Orders", admin_orders_path %>
    </li>
<% end %>

<%= content_for(:page_title) do %>
    Your Order History
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
     <h4>Orders</h4>
      </div>
      <div class="body">
        <% if @orders.empty? %>
            <p>
              <%= t("no_order") %>
            </p>
        <% else %>
            <%= render "list"%>
        <% end %>
      </div>
    </div>
  </div>
</div>