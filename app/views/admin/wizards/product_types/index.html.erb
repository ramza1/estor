<%= content_for(:breadcrumb) do %>
    <%= render :partial => '/admin/wizards/sub_header'%>
<% end %>



<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <% if  @product_types.empty? %>
            <h5>New Product Type</h5>
        <% else %>
            <h5>Pick a Product Type</h5>
        <% end %>
        <div class="btn-group hidden-phone">
          <%#= link_to "Create a brand", new_admin_brand_url, class: "btn btn-primary" %>
        </div>
      </div>
      <div class="body">
        <% if @product_types.any? %>
            <%= render "list" %>
            <hr/>
        <% end %>



        <% unless  @product_types.empty? %>
            <h3>Create a New Product Type</h3>
        <% end %>
        <%= simple_form_for @product_type, :url => admin_wizards_product_types_path, html: {class: "form-horizontal"} do |form| %>
            <%= render :partial =>  'form', :locals => {:form => form}  %>
        <% end %>
      </div>
    </div>
  </div>
</div>