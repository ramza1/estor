
<%= content_for(:breadcrumb) do %>
    <%= render :partial => '/admin/wizards/sub_header'%>
<% end %>



<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <% if  @shipping_categories.empty? %>
            <h3>New Shipping Category</h3>
        <% else %>
            <h3>Pick a Shipping Category</h3>
        <% end %>
        <div class="btn-group hidden-phone">
          <%#= link_to "Create a brand", new_admin_brand_url, class: "btn btn-primary" %>
        </div>
      </div>
      <div class="body">
          <% if @shipping_categories.any? %>
            <%= render "list" %>

          <% end %>




        <%= simple_form_for @shipping_category, :url => admin_wizards_shipping_categories_path, html: {class: "form-horizontal"} do |shipping_category_form| %>
            <%= render :partial =>  'form', :locals => {:f => shipping_category_form}  %>
        <% end %>
      </div>
    </div>
  </div>
</div>
