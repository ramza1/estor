


<%= content_for(:breadcrumb) do %>
    <%= render :partial => '/admin/wizards/sub_header'%>
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Add a new product</h4>
      </div>
      <div class="body">
        <%= simple_form_for(@product, :url => admin_wizards_products_path(), html: {clasS: "form-horizontal"}) do |f| %>
            <%= render :partial => 'form', :locals => {:f => f, form: f} %>
            <div class="form-actions">
              <%= submit_tag "Create", :class  => "btn" %>
            </div>

        <% end %>
      </div>
    </div>
  </div>
</div>

