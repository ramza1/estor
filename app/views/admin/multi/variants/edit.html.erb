<%= content_for :head do %>
    <%= javascript_include_tag "admin/jquery.customforms" %>
    <%= javascript_include_tag "admin/jquery.placeholder.min" %>
    <%= javascript_include_tag "admin/jquery.reveal" %>
    <%= javascript_include_tag "admin/jquery.tooltips" %>
    <%= javascript_include_tag "admin/modernizr.foundation" %>
<% end %>

<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to @product.name, admin_product_path(@product) %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4><%= @product.name %></h4>
        <%= render "admin/products/product_links", product: @product %>
      </div>
      <div class="body">

           <%= render "form" %>

      </div>
    </div>
  </div>
</div>

<% content_for :bottom_head do %>
    <%= javascript_include_tag 'admin/edit_variants' %>
<% end %>

