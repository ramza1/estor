<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Manage Featured Products</h4>
      </div>
      <div class="body">
        <%= simple_form_for([:admin, @featured_product], html: {class: 'form-horizontal'}) do |f| %>
            <div class="control-group">
              <%= f.label "select products", class: " control-label" %>
              <div class="controls">
                <div id='properties_selections' class=''>
                  <%= f.collection_select :product_ids, Product.all, :id, :name, {}, {multiple: true} %>
                </div>
              </div>
            </div>

            <div class="form-actions">
              <%= f.submit "Add Products", class: 'btn'  %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

