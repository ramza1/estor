<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <div class="btn-group hidden-phone">
          <%= link_to "Create a Country", new_admin_config_country_url, class: "btn btn-primary" %>
        </div>
      </div>
      <div class="body">
        <% if @countries.empty? %>
            <p class="alert alert-info">
              No Country Available yet
            </p>
        <% else %>
            <%= render "list" %>
        <% end %>
      </div>
    </div>
  </div>
</div>