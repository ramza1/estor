<table class="table table-striped table-bordered dataTable" style="margin-top: 10px;">
  <thead>
  <tr>
    <th>Name</th>
    <th>Abbreviation</th>
    <th>Shipping Zone</th>
    <th>Status</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @states.each do |state| %>
      <tr>
        <td><%= link_to state.name, edit_admin_config_country_url(state.country) %></td>
        <td><%= state.abbreviation %></td>
        <td><%= state.shipping_zone.try(:name) %></td>
        <td><%= state.active? ? "Active" : "Inactive" %></td>
        <td>
          <div class="">
            <% if state.active? %>
                <%= link_to admin_config_country_state_path(state.country, state), method: :delete, class: "btn btn-danger btn-small", data: {confirm: "Are you sure"} do %>
                      Inactivate
                <% end %>
            <% else %>
            <%= link_to admin_config_country_state_path(state.country, state), method: :delete, class: "btn btn-success btn-small", data: {confirm: "Are you sure"} do %>
                 Activate
            <% end %>

            <% end %>
          </div>
        </td>

      </tr>
  <% end %>
  </tbody>
</table>
