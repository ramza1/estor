<table class="table table-striped table-bordered dataTable" style="margin-top: 10px;">
  <thead>
  <tr>
    <th>Name</th>
    <th>Abbreviation</th>
    <th>Shipping Zone</th>
    <th>Status</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @countries.each do |country| %>
      <tr>
        <td><%= link_to country.name, admin_config_country_url(country) %></td>
        <td><%= country.abbreviation %></td>
        <td><%= country.shipping_zone.try(:name) %></td>
        <td><%= country.active? ? "Active" : "Inactive" %></td>
        <td>
          <div class="">
            <%= link_to  edit_admin_config_country_url(country), class: "btn btn-small" do %>
                <i class="icon-edit"></i>  Edit
            <% end %>
            <% if country.active? %>
            <%= link_to admin_config_country_url(country), method: :delete, class: "btn btn-danger btn-small", data: {confirm: "Are you sure"} do %>
                 Inactivate
            <% end %>
            <% else %>
                <%= link_to admin_config_country_url(country), method: :delete, class: "btn btn-success btn-small", data: {confirm: "Are you sure"} do %>
                     Activate
                <% end %>
            <% end %>
          </div>
        </td>

      </tr>
  <% end %>
  </tbody>
</table>
