
<% content_for :head do -%>
    <%= javascript_include_tag 'admin/purchase_orders' %>
<% end %>

<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Editing <%= @country.name %></h4>
        <%= link_to 'Back', admin_config_countries_url, class: "btn pull-right" %>
      </div>
      <div class="body">
        <%= form_for @country, :url  => admin_config_country_url(@country), html: {class: "form-horizontal"} do |form| %>
            <%= render "form", form: form %>
            <div class="form-actions">
              <%= submit_tag "Update Country", :class  => "btn btn-primary" %>
            </div>

        <% end %>
      </div>
    </div>
  </div>
</div>

