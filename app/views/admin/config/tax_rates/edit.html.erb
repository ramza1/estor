<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to "Shiping Rates", admin_config_tax_rates_url %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>

<%= content_for(:page_title) do %>
    Edit Tax Rate
<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Edit Tax Rate</h4>
      </div>
      <div class="body">

        <%= simple_form_for(@tax_rate, :url => admin_config_tax_rate_url(@tax_rate), html: {class: "form-horizontal"}) do |f| %>
            <%= render 'form', f:  f %>
        <% end %>
      </div>
    </div>
  </div>
</div>


<% content_for :bottom_head do -%>
    <%= javascript_include_tag "admin/config_tax_rate" %>

    <script>
        Hadean.Utility.registerOnLoadHandler(Hadean.TaxRateForm.initialize());
    </script>
<% end %>
