<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <%= link_to "View All Tax Rates", admin_config_tax_rates_url, class: "btn"%>
      </div>
      <div class="body">
        <p>
          <b>Percentage:</b>
          <%= @tax_rate.percentage %>
        </p>

        <% if Settings.tax_per_state_id %>
            <p>
              <b>State:</b>
              <%= @tax_rate.state.name %>
            </p>
        <% else %>
            <p>
              <b>Country:</b>
              <%= @tax_rate.country.name %>
            </p>
        <% end %>

        <p>
          <b>Start date:</b>
          <%= @tax_rate.start_date %>
        </p>

        <p>
          <b>End date:</b>
          <%= @tax_rate.end_date %>
        </p>

        <p>
          <b>Active:</b>
          <%= @tax_rate.active %>
        </p>


        <%= link_to 'Edit', edit_admin_config_tax_rate_path(@tax_rate), :class => 'btn' %>
        <%= link_to 'Back', admin_config_tax_rates_path, :class => 'btn' %>
      </div>
    </div>
  </div>
</div>






