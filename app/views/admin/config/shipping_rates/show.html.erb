<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <%= link_to "View All Shipping Rates", admin_config_shipping_rates_url, class: "btn"%>
      </div>
      <div class="body">
        <table class="table table-striped table-bordered" style="margin-top: 10px;">
          <thead>
          <tr>
            <th>Shipping Method</th>
            <th>Rate</th>
            <th>Shipping rate type</th>
            <th>Minimum Charge</th>
            <th>Category</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td><%= @shipping_rate.shipping_method.try(:name) %></td>
            <td><%= @shipping_rate.rate %></td>
            <td><%= @shipping_rate.shipping_rate_type.try(:name) %></td>
            <td><%= @shipping_rate.minimum_charge %></td>
            <td><%= @shipping_rate.shipping_category.try(:name) %></td>
            <td>
              <div class="">
                <%= link_to  edit_admin_config_shipping_rate_url(@shipping_rate), class: "btn btn-small" do %>
                    <i class="icon-edit"></i>  Edit
                <% end %>
              </div>
            </td>

          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>






