<table class="table table-striped table-bordered dataTable" style="margin-top: 10px;">
  <thead>
  <tr>
    <th>Name</th>
    <th>Zone</th>
    <th>Status</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @shipping_methods.each do |shipping_method| %>
      <tr>
        <td><%= link_to shipping_method.name, edit_admin_config_shipping_method_url(shipping_method) %></td>
        <td><%= shipping_method.shipping_zone.try(:name) %></td>
        <td><%= shipping_method.active? ? "Active" : "Inactive" %></td>
        <td>
          <div class="">
            <%= link_to  edit_admin_config_shipping_method_url(shipping_method), class: "btn btn-small" do %>
                <i class="icon-edit"></i>  Edit
            <% end %>
            <% if shipping_method.active? %>
                <%= link_to admin_config_shipping_method_url(shipping_method), method: :delete, class: "btn btn-danger btn-small", data: {confirm: "Are you sure"} do %>
                    Inactivate
                <% end %>
            <% else %>
                <%= link_to admin_config_shipping_method_url(shipping_method), method: :delete, class: "btn btn-success btn-small", data: {confirm: "Are you sure"} do %>
                    Activate
                <% end %>
            <% end %>

          </div>
        </td>

      </tr>
  <% end %>
  </tbody>
</table>
