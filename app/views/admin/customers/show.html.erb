<%= content_for(:page_title) do %>
    Customer Details
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4><%= @customer.display_name %></h4>
      </div>
      <div class="body">
        Address: <%= @customer.address %><br/>
        Phone Number: <%= @customer.phone_number %><br/>
        Email: <%= @customer.email %>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4><%= @customer.display_name %>'s order transactions</h4>
      </div>
      <div class="body">
        <% if @customer.orders.visible_orders.empty? %>
            <p>
              <%= t("no_order") %>
            </p>
        <% else %>
            <%= render "order_list", customer: @customer %>
        <% end %>
      </div>
    </div>
  </div>
</div>



