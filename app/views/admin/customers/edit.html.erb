<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Editing Customer <%= @customer.display_name %> </h4>
      </div>
      <div class="body">
        <%= form_for @customer, :url  => admin_customer_path(@customer), html: {class:""} do |form| %>
              <%= render "form", form: form %>
            <div class="form-action">
              <%= submit_tag "Update Customer", :class  => "btn btn-success" %>
              <%= link_to 'Back', admin_customers_url, class: "btn pull-right"  %>
            </div>

        <% end %>
      </div>
    </div>
  </div>
</div>

