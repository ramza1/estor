<table class="table table-striped table-bordered dataTable" style="margin-top: 10px;">
  <thead>
  <tr>
    <th>Full Name</th>
    <th>Email</th>
    <th>Status</th>
    <th>&nbsp;</th>
  </tr>
  </thead>
  <tbody>
  <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.display_name, admin_customer_path(customer) %></td>
        <td><%= customer.email %></td>
        <td><%= customer.state %></td>

        <td>
          <div class="btn-group">
            <%= link_to edit_admin_customer_path(customer), class: "btn" do %>
                <i class="icon-edit"></i> Edit
            <% end %>
          </div>
        </td>

      </tr>
  <% end %>
  </tbody>
</table>