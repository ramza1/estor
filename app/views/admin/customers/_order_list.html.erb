<table class="table table-striped table-bordered dataTable" style="margin-top: 10px;">
  <thead>
  <tr>
    <th>Order Number</th>
    <th>Total</th>
    <th>State</th>
    <th>Date created</th>
    <th>Customer</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% customer.orders.visible_orders.each do |order| %>
      <tr>
        <td><%= link_to order.number, admin_order_path(order) %></td>
        <td><%= number_to_currency(order.find_total, unit: "â‚¦", precision: 0 )%></td>
        <td><%= order.state.humanize %></td>
        <td><%= order.created_at.to_date %></td>
        <td><%= link_to order.customer.display_name, admin_customer_path(order.customer) %></td>
         <td><%= link_to "View full details", admin_order_path(order) %></td>
      </tr>
  <% end %>
  </tbody>
</table>
