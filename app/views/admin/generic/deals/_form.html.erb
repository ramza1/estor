<% if @deal.errors.any? %>
    <div class="alert alert-error">
      <h4><%= pluralize(@deal.errors.count, "error") %> prohibited this deal from being saved:</h4>

      <ul>
        <% @deal.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<fieldset>

  <div class="control-group">
    <%= f.label :buy_quantity, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :buy_quantity, class:"input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :get_percentage, class: "control-label" %>
    <div class="controls">
      <%= f.number_field :get_percentage, class:"input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :deal_type_id, class: "control-label" %>
    <div class="controls">
      <%= f.select :deal_type_id, deal_types, {:include_blank => true}, class: "input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :product_type_id, class: "control-label" %>
    <div class="controls">
      <%= f.select :product_type_id, product_types, {:include_blank => true}, class: "input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :get_amount, class: "control-label" %>
    <div class="controls">
      <%= f.number_field :get_amount, class: "input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :deleted_at, 'Ends At', class: "control-label" %>
    <div class="controls">
      <%= f.datetime_select :deleted_at, {}, class: "span2" %>
    </div>
  </div>
</fieldset>

<div class="form-actions">
  <%= f.submit :class => "btn btn-primary" %>
</div>