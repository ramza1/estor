<fieldset>

  <div class="control-group">
    <%= f.label :product_id, class: "control-label" %>
    <div class="controls">
      <%= f.select :product_id, products, {:include_blank => true}, class: "input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :percent_off, class: "control-label" %>
    <div class="controls">
      <%= f.number_field :percent_off, class:"input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :starts_at, class: "control-label" %>
    <div class="controls">
      <%= f.datetime_select :starts_at, {}, class: "span2" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :ends_at, class: "control-label" %>
    <div class="controls">
      <%= f.datetime_select :ends_at, {}, class: "span2" %>
    </div>
  </div>

</fieldset>

<div class="form-actions">
  <%= f.submit :class => "btn btn-primary" %>
</div>