<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Sales</h4>
        <div class="btn-group hidden-phone pull-right">
          <%= link_to "New Sale", new_admin_generic_sale_path, class: "btn btn-primary" %>
        </div>
      </div>
      <div class="body">
        <% if @sales.empty? %>
            <p class="alert alert-info">
              No Sales Available Yet
            </p>
        <% else %>
            <%= render "list" %>
        <% end %>

        <%= will_paginate @sales %>
      </div>
    </div>
  </div>
</div>



