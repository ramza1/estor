<table class="table table-striped table-bordered dataTable">
  <tr class='odd'>

    <th>Product</th>
    <th>Percent Off</th>
    <th>Starts At</th>
    <th>Ends At</th>
    <th></th>
  </tr>
  <tbody>
  <% for sale in @sales %>
      <tr  class='<%= cycle("odd", "")%>'>

        <td><%= link_to sale.product_id, [:admin, :generic, sale] %></td>
        <td><%= sale.percent_off %></td>
        <td><%= sale.starts_at %></td>
        <td><%= sale.ends_at %></td>
        <td><%= link_to "edit", edit_admin_generic_sale_path(sale), class: "btn" %>
        <%= link_to "inactivate", [:admin, :generic, sale], :data => { :confirm => 'Are you sure?' }, :method => :delete, class: "btn btn-danger" %></td>
      </tr>
  <% end %>
  </tbody>
</table>