<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to "Sales", admin_generic_sales_url %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>

<%= content_for(:page_title) do %>
    Edit Sale
<% end %>



<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Edit Sale</h4>
        <span class="pull-right">
        <%= link_to "View all", [:admin, :generic, @sale], :class => "btn" %>
          <%= link_to "Show", admin_generic_sale_path(), :class => "btn" %>
        </span>
      </div>
      <div class="body">

        <%= simple_form_for(@sale, :url => [:admin, :generic, @sale], html: {class: "form-horizontal"}) do |f| %>
            <%= render 'form', f:  f %>
        <% end %>
      </div>
    </div>
  </div>
</div>

