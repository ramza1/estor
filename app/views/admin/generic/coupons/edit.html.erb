<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to "Shiping Rates", admin_config_shipping_rates_url %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>

<%= content_for(:page_title) do %>
   Edit Coupon
<% end %>



<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>New Coupon</h4>
        <span class="pull-right">
          <%= link_to "View All", admin_generic_coupons_path, :class => "btn" %>
          <%= link_to 'Show', admin_generic_coupon_path( @coupon ), :class => 'btn' %>
        </span>

      </div>
      <div class="body">

        <%= simple_form_for(@coupon, :as => :coupon, :url => admin_generic_coupon_path(@coupon), html: {class: "form-horizontal"}) do |f| %>
            <%= render 'form', f:  f %>
        <% end %>
      </div>
    </div>
  </div>
</div>


