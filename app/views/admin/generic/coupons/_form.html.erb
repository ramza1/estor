<% if @coupon.errors.any? %>
  <div class="alert alert-error">
    <h4><%= pluralize(@coupon.errors.count, "error") %> prohibited this coupon from being saved:</h4>

    <ul>
    <% @coupon.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<fieldset>

  <div class="control-group">
    <label class="control-label">Code</label>
    <div class="controls">
      <%= f.text_field :code, class:"input-xlarge" %>
    </div>
  </div>


  <% unless @coupon.id %>

      <div class="control-group">
        <label class="control-label">Type</label>
        <div class="controls">
          <%= select_tag :c_type, @coupon_types.map{|ct| "<option>#{ct}</option>"}.join().html_safe , { :include_blank => true, class: "input-xlarge" } %>
        </div>
      </div>
  <% end %>


  <div class="control-group">
    <label class="control-label">Amount</label>
    <div class="controls">
      <%= f.text_field :amount, class:"input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">Minimum Value</label>
    <div class="controls">
      <%= f.text_field :minimum_value, class:"input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">Percent</label>
    <div class="controls">
      <%= f.text_field :percent, class:"input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">Description</label>
    <div class="controls">
      <%= f.text_area :description, class:"input-xlarge", rows: 3 %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">Combine</label>
    <div class="controls">
      <%= f.check_box :combine %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">Starts at</label>
    <div class="controls">
      <%= f.text_field :starts_at, class:"input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">Expires at</label>
    <div class="controls">
      <%= f.text_field :expires_at, class:"input-xlarge" %>
    </div>
  </div>

</fieldset>

<div class="form-actions">
  <%= f.submit :class => "btn btn-primary" %>
</div>
