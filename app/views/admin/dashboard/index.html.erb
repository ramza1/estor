<%= provide(:page_title) do %>
   Dashboard
<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>My Products</h4>
        <div class="btn-group hidden-phone right-icon">
        <%= link_to "Add new product", admin_product_wizard_url, class: "btn btn-primary" %>
        </div>
      </div>
      <div class="body">
    <% if @products.empty? %>
        <p>
          <%= t("no_product") %>
        </p>
    <% else %>
        <%= render "admin/products/list" %>
    <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid">

  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Order History</h4>
      </div>
      <div class="body">
        <%= content_for(:breadcrumb) do %>
            <li>
              <%= link_to "Dashboard", admin_root_url %>
              <span class="icon-angle-right"></span>
            </li>
            <li>
              <%= link_to_unless_current "Orders", admin_orders_path %>
            </li>
        <% end %>

        <%= content_for(:page_title) do %>
            Orders
        <% end %>

        <div class="row-fluid">
          <div class="span12">
            <div class="social-box">
              <div class="header">
                <h4>Orders</h4>
              </div>
              <div class="body">
                <div class="history_orders">
                  <table class="table table-striped table-bordered dataTable">
                    <thead>
                    <tr class='odd'>
                      <th class='column1_header'>Number</th>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Completed at</th>
                      <th>Shipped</th>
                    </tr>
                    </thead>

                    <% @orders.each do |order| %>
                        <tr class='<%= cycle("odd", "")%>'>
                          <td><%= link_to order.number, admin_history_order_path(order) %></td>
                          <td><%= order.name %></td>
                          <td><%= order.email %></td>
                          <td><%= order.display_completed_at(:us_time) %></td>
                          <td><%= order.has_shipment?.to_s %></td>
                        </tr>
                    <% end %>
                  </table>
                </div>
                <%= will_paginate @orders %>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>





