<%= provide(:page_title) do %>
   Dashboard
<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>My Products</h4>
        <div class="btn-group hidden-phone right-icon">
        <%= link_to "Add new product", admin_product_wizard_url, class: "btn btn-primary" %>
        </div>
      </div>
      <div class="body">
    <% if @products.empty? %>
        <p>
          <%= t("no_product") %>
        </p>
    <% else %>
        <%= render "admin/products/list" %>
    <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid">

  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Order History</h4>
      </div>
      <div class="body">
        <% if @orders.empty? %>
            <p>
              <%= t("no_order") %>
            </p>
        <% else %>
            <%= render "admin/orders/list"%>
        <% end %>
      </div>
    </div>
  </div>
</div>





