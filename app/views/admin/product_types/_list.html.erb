<table class="table table-striped table-bordered dataTable" style="margin-top: 10px;">
  <thead>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @product_types.each do |product_type| %>
      <tr>
        <td><%= link_to product_type.name, admin_product_type_path(product_type) %></td>
        <td>
          <div class="btn-group">
            <%= link_to  edit_admin_product_type_path(product_type), class: "btn" do %>
                <i class="icon-edit"></i>  Edit
            <% end %>
            <%= link_to admin_product_type_path(product_type), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure"} do %>
                <i class="icon-trash"></i>  Delete
            <% end %>
          </div>
        </td>

      </tr>
  <% end %>
  </tbody>
</table>
