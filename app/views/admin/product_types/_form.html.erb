<%= simple_form_for([:admin, @product_type], html: {class: 'form-horizontal' }) do |f| %>


    <fieldset style="margin-top:20px">
    <%= f.input :name, input_html: {class: "input-xlarge"} %>

      <div class="control-group">
        <%= f.label :parent, class: " control-label" %>
        <div class="controls">
          <%= f.collection_select :parent_id, @product_types, :id, :name, include_blank: true, class: "input-xlarge" %>
        </div>
      </div>



    <div class="form-actions">
      <%= f.submit class: "btn" %>  or <%= link_to "Cancel", :back %>
    </div>
    </fieldset>
<% end %>