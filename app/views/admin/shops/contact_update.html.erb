<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to "My shop details", admin_shop_path %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      Edit Contact Details

    </li>
<% end %>

<%= content_for(:page_title) do %>
    Edit Contact Details
<% end %>

<div class="row-fluid">
  <div class="offset2 span8">
    <div class="social-box">
      <div class="header">
        <h4>Editing Contact Details</h4>
      </div>
      <div class="body">
        <%= simple_form_for([:admin, @shop], html: {class: 'form-horizontal', method: 'put' }) do |f| %>
            <fieldset style="margin-top:20px">
              <%= f.input :phone_number, input_html: {class: "input-xlarge"} %>
              <%= f.input :mobile_number, hint: "Mobile Number is displayd on your shop", input_html: {class: "input-xlarge"} %>
              <%= f.input :work_number, input_html: {class: "input-xlarge"} %>
              <div class="form-actions">
                <%= f.submit "Update Contact Details", class: "btn"  %>
              </div>
            </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>

