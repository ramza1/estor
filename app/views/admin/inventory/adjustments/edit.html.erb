<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Inventory Adjustment  for <%= @variant.product_name %></h4>
      </div>
      <div class="body">
       <div class="row-fluid">
         <div class="span6">
           <%= form_for(@variant, :url => admin_inventory_adjustment_path(@variant), html: {class: "form-horizontal"}) do |f| %>
               <%= render :partial => 'form', :locals => {:f => f} %>

               <div class=" generic_submit_button form-actions">
                 <%= f.submit "Update Inventory",
                              :class  => "btn btn-success",
                              :id     => "adjust_inventory_button" %>
               </div>

           <% end %>
         </div>
         <div class="span6">
           <table class="table table-striped table-bordered dataTable">
             <thead >
             <tr>
               <th>SKU</th>
               <th>count on hand</th>
               <th>pending to customer</th>
               <th>count pending from supplier</th>
             </tr>
             </thead>
             <tbody>
             <tr>
               <td><%= @variant.sku %></td>
               <td><%= @variant.inventory.count_on_hand %></td>
               <td><%= @variant.inventory.count_pending_to_customer %></td>
               <td><%= @variant.inventory.count_pending_from_supplier %></td>
             </tr>
             </tbody>
           </table>


           <p>
             <%= link_to "Show #{@variant.product_name}" , admin_inventory_adjustment_path( @variant.product ), :class => 'btn' %>
             <%= link_to 'View Products', admin_inventory_adjustments_path, :class => 'btn' %>
           </p>
         </div>

       </div>



      </div>
    </div>
  </div>
</div>