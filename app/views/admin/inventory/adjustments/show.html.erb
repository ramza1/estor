<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Inventory Adjustment for <%= @product.name %></h4>
        <%= render "admin/products/product_links", product: @product %>
      </div>
      <div class="body">

        <div class="admin_adjustments">
          <table class="table table-striped table-bordered dataTable">
            <thead>
            <tr>
              <th>SKU</th>
              <th>count on hand</th>
              <th>pending to customer</th>
              <th>count pending from supplier</th>
              <th></th>
            </tr>
            </thead>
            <% @product.variants.each do |variant| %>
                <tr>
                  <td><%= variant.sku %></td>
                  <td><%= variant.inventory.count_on_hand %></td>
                  <td><%= variant.inventory.count_pending_to_customer %></td>
                  <td><%= variant.inventory.count_pending_from_supplier %></td>
                  <td><%= link_to "Change", edit_admin_inventory_adjustment_path(variant), class: "btn" %></td>
                </tr>
            <% end %>
          </table>
        </div>

        <p>
          <%= link_to "View Other Product", admin_inventory_adjustments_path, :class => 'btn' %>
          <%= link_to "Back to Product", admin_product_path(@product), :class => 'btn' %>
        </p>

      </div>
    </div>
  </div>
</div>