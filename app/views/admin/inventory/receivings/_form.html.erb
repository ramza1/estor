<div class='span-11 <%= po_variant_form.object.is_received? ? 'received_po' : 'not_received_po'  %>'
     xmlns="http://www.w3.org/1999/html">
  <% po_variant = po_variant_form.object %>
  <td><%= po_variant.variant.name_with_sku %></td>
  <td><%= po_variant.quantity %></td>
  <td><%= po_variant.cost %></td>
  <div class='span-3 last' style='float:right;'>
    <% unless po_variant_form.object.is_received? %>
      <%#= po_variant_form.check_box :receive_po %>
    <% end %>
  </div>
</div>