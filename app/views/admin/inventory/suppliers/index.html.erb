<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Suppliers</h4>
        <%= link_to "New Supplier", new_admin_inventory_supplier_path, :class => "btn pull-right" %>
      </div>
      <div class="body">
        <div class="admin_suppliers">
          <table class="table table-bordered table-striped">
            <thead>
            <tr class='odd'>
              <th class='column1_header'>Name</th>
              <th>Email</th>
              <th></th>
            </tr>
            </thead>
            <% @suppliers.each do |supplier| %>
                <tr class='<%= cycle("odd", "")%>'>
                  <td><%= link_to supplier.name, edit_admin_inventory_supplier_path(supplier) %></td>
                  <td><%= supplier.email %></td>
                  <td><%= link_to "Edit", edit_admin_inventory_supplier_path(supplier), class: "btn btn-small" %></td>
                </tr>
            <% end %>
          </table>

          <%= will_paginate @suppliers %>
        </div>

      </div>
    </div>
  </div>
</div>

