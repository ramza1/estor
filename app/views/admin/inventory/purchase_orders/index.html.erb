<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Purchase Orders</h4>
        <%= link_to "New Purchase Order", new_admin_inventory_purchase_order_path, :class => "btn pull-right", :id => "new_purchase_order_button" %>
      </div>
      <div class="body">
        <div class="admin_purchase_orders">
          <table class="table table-striped table-bordered dataTable" style="margin-top: 10px;">
            <thead>
            <tr class='odd'>
              <th class='column1_header'>Supplier Name</th>
              <th>Invoice Number"</th>
              <th>Tracking Number</th>
              <th>Estimated Arrival</th>
              <th>Received</th>
            </tr>
            </thead>
            <% @purchase_orders.each do |order| %>
                <tr class='<%= cycle("odd", "")%>'>
                  <td><%= link_to order.supplier_name, edit_admin_inventory_purchase_order_path(order) %></td>
                  <td><%= order.invoice_number %></td>
                  <td><%= order.tracking_number %></td>
                  <td><%= order.display_estimated_arrival_on %></td>
                  <td><%= order.display_received %></td>
                </tr>
            <% end %>
          </table>

          <%= will_paginate @purchase_orders %>
        </div>
      </div>
    </div>
  </div>
</div>



