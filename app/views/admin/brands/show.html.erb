<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to_unless_current "brands", admin_brands_path %>
      <span class="icon-angle-right"></span>
    </li>

<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4><%= @brand.name %> Brand</h4>
        <div class="pull-right">
          <%= link_to "Create a Brand", new_admin_brand_path, class: "btn" %>
          <%= link_to "Edit", edit_admin_brand_path(@brand), class: "btn btn-info" %>
          <%= link_to "Delete", admin_brand_path(@brand), method: :delete, data: {confirm: "Are you sure"}, class: "btn btn-danger" %>
        </div>
      </div>
      <div class="body">
        <% if @products.empty? %>
            <p class="alert alert-info">
              No product for this brand yet.
            </p>
        <% else %>
            <%= render "admin/products/list"%>
        <% end %>
      </div>
    </div>
  </div>
</div>


