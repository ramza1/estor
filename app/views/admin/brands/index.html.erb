<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to_unless_current "Brands", admin_brands_path %>
    </li>
<% end %>

<%= content_for(:page_title) do %>
    Manage Product Brands
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <div class="btn-group hidden-phone">
          <%= link_to "Create a brand", new_admin_brand_url, class: "btn btn-primary" %>
        </div>
      </div>
      <div class="body">
        <% if @brands.empty? %>
            <p class="alert alert-info">
              No Brand Available yet
            </p>
        <% else %>
            <%= render "list" %>
        <% end %>
      </div>
    </div>
  </div>
</div>