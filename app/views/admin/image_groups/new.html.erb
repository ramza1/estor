<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to "Product Types", admin_image_groups_path %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>




<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>New Image Group</h4>
      </div>
      <div class="body">
        <%= simple_form_for([:admin, @image_group], html: {class: 'form-horizontal' }) do |f| %>


            <fieldset style="margin-top:20px">
              <%= f.input :name, input_html: {class: "input-xlarge"} %>

              <div class="control-group">
                <%= f.label :product_id, class: " control-label" %>
                <div class="controls">
                  <%= f.select :product_id, products, {:include_blank => true,}, class: "input-xlarge" %>
                </div>
              </div>



              <div class="form-actions">
                <%= f.submit class: "btn" %>  or <%= link_to "Cancel", :back %>
              </div>
            </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>

