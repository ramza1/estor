<table class="table table-striped table-bordered dataTable" style="margin-top: 10px;">
  <thead>
  <tr>
    <th>Name</th>
    <th>Amount of products</th>
    <th>Date Added</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, admin_category_path(category) %></td>
        <td style="text-align: center;"><%= category.products.size %></td>
        <td><%= link_to category.created_at.to_date.to_s(:long)%></td>
        <td>
          <div class="btn-group">
            <%= link_to  edit_admin_category_path(category), class: "btn" do %>
                <i class="icon-edit"></i>
            <% end %>
            <%= link_to admin_category_path(category), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure"} do %>
                <i class="icon-trash"></i>
            <% end %>
          </div>
        </td>

      </tr>
  <% end %>
  </tbody>
</table>
