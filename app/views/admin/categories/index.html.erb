<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to_unless_current "categories", admin_categories_path %>
    </li>
<% end %>

<%= content_for(:page_title) do %>
    Manage Product Categories
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <div class="btn-group hidden-phone">
          <%= link_to "Create a new category", new_admin_category_url, class: "btn btn-primary" %>
        </div>
      </div>
      <div class="body">
        <% if @categories.empty? %>
            <p>
              No Category
            </p>
        <% else %>
            <%= render "list" %>
        <% end %>
      </div>
    </div>
  </div>
</div>