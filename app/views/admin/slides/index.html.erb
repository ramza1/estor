<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to_unless_current "Slides", admin_slides_url %>
    </li>
<% end %>

<%= content_for(:page_title) do %>
    Manage Theme Slides <span class="right-icon"><%= link_to "Create News Slide", new_admin_slide_path, class: "btn" %></span>
<% end %>


<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        My Theme Slides
      </div>
      <div class="body">
        <% if @slides.empty? %>
            <p class="alert alert-info">
              No Slides yet
            </p>
        <% else %>
            <table class="table table-striped table-bordered dataTable">
              <thead>
              <tr>
                <th>Header</th>
                <th>Description</th>
                <th>Video url</th>
                <th>Button url</th>
                <th>image</th>
              </tr>
              </thead>
              <tbody>
              <% @slides.each do |slide| %>
                  <tr>
                    <td><%= slide.title %></td>
                    <td><%= slide.description %></td>
                    <td><%= slide.video_url %></td>
                    <td><%= slide.link_url %></td>
                    <td><%= image_tag slide.slide_image %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
        <% end %>
      </div>
    </div>
  </div>
</div>
