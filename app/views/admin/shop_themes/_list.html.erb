<table class="table table-striped table-bordered dataTable" style="margin-top: 10px;">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Has Slider</th>
    <th>Picture</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @shop_themes.each do |shop_theme| %>
      <tr>
        <td><%= link_to shop_theme.theme.name.humanize, admin_shop_theme_path(shop_theme) %></td>
        <td><%= shop_theme.theme.description %></td>
        <td style="text-align: center;"><%= shop_theme.theme.has_slider? ? "Yes" : "No" %></td>
        <td><%= image_tag shop_theme.theme.featured_image_big %></td>
        <td>
          <div class="btn-group">
            <% if shop_theme.theme.has_slider? %>
            <%= link_to  edit_admin_shop_theme_path(shop_theme), class: "btn" do %>
                <i class="icon-edit"></i> Enable/disable slider
            <% end end %>
          </div>
        </td>

      </tr>
  <% end %>
  </tbody>
</table>
