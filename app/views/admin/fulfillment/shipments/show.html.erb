<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Shipment details</h4>
        <span class="pull-right">
           <%= link_to 'Edit', edit_admin_fulfillment_shipment_path(@shipment), :class => 'btn' %>
          <%= link_to 'View Shipments for this Order', admin_fulfillment_shipments_path(:order_id => @shipment.order.number), :class => 'btn' %>
        </span>
      </div>
      <div class="body">
         <div class="row-fluid">
           <div class="span9">
             <%= render "order_items_list", shipment: @shipment %>
           </div>

           <div class="span3">

             <div class='well'>
               <b>Shipment details</b>

               <ul  class='vertical-list width-list' style="margin-left: 0">
                 <li>
                   <label class=''>Shipped at:</label>
                   <span class=''><%=l @shipment.shipped_at, :format => :us_time if @shipment.shipped_at %></span>
                 </li>
                 <li style='clear:both;'>
                   <label class=''>Tracking #:</label>
                   <span class=''><%= @shipment.tracking %></span>
                 </li>
                 <li>
                   <label class=''>Shipment #:</label>
                   <span class=''><%= @shipment.number %></span>
                 </li>
                 <li>
                   <label class=''>Status:</label>
                   <span class=''><%= @shipment.state.humanize %></span>
                 </li>
                 <li></li>
               </ul>
             </div>
             <div class="well">
             <b>Order Details</b>

             <ul  class='vertical-list width-list ' style="margin-left: 0;">
               <li>
                 <label >Order #:</label>
                 <span><%= @shipment.order.number %></span>
               </li>
               <li>
                 <label>Customer:</label>
                 <span><%= @shipment.order.customer.name %></span>
               </li>
             </ul>
            </div>
             <div class="well">
               <b>Shipping Address:</b>
               <div>
                 <%= render :partial => 'compact_address', :locals => {:shopping_address => @shipment.address} %>
               </div>
             </div>
           </div>
         </div>
      </div>
    </div>
  </div>
</div>


