




<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Shipping Orders</h4>
      </div>
      <div class="body">

        <div id="admin_fulfillment_orders_page_wrapper">
          <div id="admin_fulfillment_orders_grid_wrapper" class='column pretty_table'>
            <table class="table table-striped table-bordered dataTable">
              <thead>
              <tr class='odd'>
                <th class='column1_header'>Number</th>
                <th>Email</th>
                <th>Name</th>
                <th>Status</th>
                <th>Shipped</th>
              </tr>
              </thead>
              <% @orders.each do |order| %>
                  <tr class='<%= cycle("odd", "")%>'>
                    <td><%= link_to order.number, edit_admin_fulfillment_order_path(order) %></td>
                    <td><%= order.email %></td>
                    <td><%= order.name %></td>
                    <td><%= order.display_completed_at %></td>
                    <td><%= order.shipped.to_s %></td>
                  </tr>
              <% end %>
            </table>

            <%= will_paginate @orders %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>


