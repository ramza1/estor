






<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Make a Comment on Order (<%= order.number %>)</h4>
        <span class="pull-right">
           <%= link_to 'Back to List', admin_fulfillment_order_comments_path(order), :class => 'btn' %>
        </span>
      </div>
      <div class="body">
        <%= simple_form_for(@comment, :url => admin_fulfillment_order_comments_path(order, @comment), html: {class: "form-horizontal"}) do |f| %>
            <%= render :partial => 'form', :locals => {:f => f} %>
        <% end %>
      </div>
    </div>
  </div>
</div>


