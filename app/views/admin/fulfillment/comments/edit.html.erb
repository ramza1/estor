<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Edit Comment</h4>
        <span class="pull-right">
            <%= link_to 'Show', admin_fulfillment_order_comment_path(order, @comment ), :class => 'btn' %> |
          <%= link_to 'View All', admin_fulfillment_order_comments_path(order), :class => 'btn' %>
        </span>
      </div>
      <div class="body">
        <%= simple_form_for(@comment, :url => admin_fulfillment_order_comment_path(order, @comment), html: {class: "form-horizontal"}) do |f| %>
            <%= render :partial => 'form', :locals => {:f => f} %>
        <% end %>
      </div>
    </div>
  </div>
</div>


