<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <h4>Order <%= order.number %> Comments </h4>
        <span class="pull-right">
          <%= link_to "New Comment", new_admin_fulfillment_order_comment_path(order), :class => 'btn' %>
        </span>
      </div>
      <div class="body">
        <table class="table table-striped table-bordered dataTable">
          <thead>
          <tr class='odd'>
            <th class='column1_header'>Note</th><th></th><th></th>
          </tr>
          </thead>
          <% for comment in order.comments %>
              <tr class='<%= cycle("odd", "")%>'>
                <td><%= link_to comment.note, admin_fulfillment_order_comment_path(order, comment) %></td>
                <td><%= link_to "Edit", edit_admin_fulfillment_order_comment_path(order, comment), class: "btn" %></td>
                <td><%= link_to "Destroy", admin_fulfillment_order_comment_path(order, comment), data: {:confirm => 'Are you sure?'}, :method => :delete, class: 'btn btn-danger' %></td>
              </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>

