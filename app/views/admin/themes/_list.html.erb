<table class="table table-striped table-bordered dataTable" style="margin-top: 10px;">
  <thead>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Description</th>
    <th>Has Slider</th>
    <th>Picture</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @themes.each do |theme| %>
      <tr>
        <td><%= link_to theme.name.titleize, master_theme_path(theme) %></td>

        <td>
          <% if theme.price.present? %>
           <%= number_to_currency(theme.price, unit: "â‚¦", precision: 0 )%>
          <% else %>
              Free
          <% end %>
        </td>
        <td><%= theme.description %></td>
        <td style="text-align: center;"><%= theme.has_slider? ? "Yes" : "No" %></td>
        <td><%= image_tag theme.featured_image_big %></td>
        <td>
          <div class="btn-group">
            <%= link_to  admin_theme_path(theme), class: "btn" do %>
                <i class="icon-eye-open"></i> View Theme
            <% end %>
          </div>
        </td>

      </tr>
  <% end %>
  </tbody>
</table>
