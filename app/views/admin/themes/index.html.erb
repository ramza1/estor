<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to_unless_current "Themes", master_themes_path %>
    </li>
<% end %>

<%= content_for(:page_title) do %>
    Theme Store <small>Browse our awesome themes</small>
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <div class="btn-group hidden-phone">
          <%= link_to "Add new theme", new_master_theme_url, class: "btn btn-primary" %>
        </div>
      </div>
      <div class="body">
        <% if @themes.empty? %>
            <p>
              No theme
            </p>
        <% else %>
            <%= render "list" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


