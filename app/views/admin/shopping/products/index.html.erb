<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
<% end %>

<%= content_for(:page_title) do %>
    Products
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
<h5>Products</h5>
      </div>
      <div class="body">
        <div class="row-fluid">
      <div class="span8">
        <% if @products.empty? %>
            <p>
              <%= t("no_product") %>
            </p>
        <% else %>
            <table class="table table-striped table-bordered">
              <thead>
              <tr class='odd'>
                <th class='column1_header'>Name</th>
                <th>Available</th>
                <th><%= 'Product Type' %></th>
                <th> Price Range </th>
              </tr>
              </thead>
              <% @products.each do |product| %>
                  <tr class='<%= cycle("odd", "")%>'>
                    <td><%= link_to product.name, edit_admin_shopping_product_path(product) %></td>
                    <td><%=  product.available? ? 'Yes' : 'No' %></td>
                    <td><%=  product.product_type.name %></td>
                    <td><%= product.display_price_range %></td>
                  </tr>
              <% end %>
            </table>

            <%= will_paginate @products %>
        <% end %>
      </div>

        <div id='cart-right-side-panel' class='span4'>
          <%= render :partial => '/admin/shopping/right_panel_summary'%>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>


