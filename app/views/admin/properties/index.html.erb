<%= content_for(:breadcrumb) do %>
    <li>
      <%= link_to "Dashboard", admin_root_url %>
      <span class="icon-angle-right"></span>
    </li>
    <li>
      <%= link_to_unless_current "Properties", admin_properties_path %>
    </li>
<% end %>

<% content_for(:page_title) do %>
    Manage Properties
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="social-box">
      <div class="header">
        <div class="btn-group hidden-phone">
          <%= link_to "Create a new Properties", new_admin_property_url, class: "btn btn-primary" %>
        </div>
      </div>
      <div class="body">
        <% if @properties.empty? %>
            <p>
              No Properties
            </p>
        <% else %>
            <%= render "list" %>
        <% end %>
      </div>
    </div>
  </div>
</div>