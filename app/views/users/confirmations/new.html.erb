<%= content_for(:login_page) do %>


    <div class="container">
      <%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, class: "form-forgot" }) do |f| %>
          <h2 class="form-heading">Email Confirmation</h2>
          <p>Resend confirmation instructions</p>
          <%= devise_error_messages_custom! %>
          <div class="input-prepend input-fullwidth">
            <span class="add-on"><i class="icon-envelope-alt"></i></span>
            <div class="input-wrapper">
              <%= f.input :email, label: false, :required => true, as: :string, placeholder: "Email Address" %>
            </div>
          </div>
          <div class="form-actions">
            <button class="btn btn-success pull-right" type="submit">
              Resend confirmation instructions
            </button>
          </div>
          <div class="forget-password">
            <%= render "users/shared/links" %>
          </div>
      <% end %>
      <div class="form-footer-copyright">
        <%= Time.now.year %> Â© <small><%= link_to "Myshopnanny", root_url(subdomain: false) %> - Online Shop builder tool</small>
      </div>

    </div>

<% end %>




