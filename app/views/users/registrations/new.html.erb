<%= content_for(:login_page) do %>
    <div class="container">
      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form-register"}) do |f| %>
        <h2 class="form-heading">Setup</h2>
        <div id="register-container">
          <p class="text-center"><b>Register your first admin user</b></p>
          <%= devise_error_messages_custom! %>
          <div class="input-prepend input-fullwidth">
            <span class="add-on"><i class="icon-user"></i></span>
            <div class="input-wrapper">
              <%= f.text_field :username, placeholder: "Username", :required => true %>
            </div>
          </div>
          <div class="input-prepend input-fullwidth">
            <span class="add-on"><i class="icon-envelope-alt"></i></span>
            <div class="input-wrapper">
              <%= f.email_field :email,  placeholder: "Your Email address", :required => true, :autofocus => true %>
            </div>
          </div>
          <div class="input-prepend input-fullwidth">
            <span class="add-on"><i class="icon-lock"></i></span>
            <div class="input-wrapper">
              <%= f.password_field :password, :required => true, placeholder: "password" %>
            </div>
          </div>
          <div class="input-prepend input-fullwidth">
            <span class="add-on"><i class="icon-lock"></i></span>
            <div class="input-wrapper">
              <%= f.password_field :password_confirmation, :required => true, placeholder: "Repeat Password" %>
            </div>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>
        </div>

          <%#= render "users/shared/links" %>
      <% end %>
      <div class="form-footer-copyright">
        <%= Time.now.year %> Â© <small><%= link_to "Myshopnanny", "http://myshopnanny.com" %> - Online Shop builder tool</small>
      </div>
    </div>

<% end %>



